# ============================================
# Better Auth Configuration
# ============================================
# Secret key for Better Auth encryption (minimum 32 characters, base64 encoded)
# Generate with: openssl rand -base64 32
# This is used to encrypt session cookies and must be kept secret
BETTER_AUTH_SECRET=your_secret_key_min_32_characters_base64_encoded_here

# Base URL of your application
# Development: http://localhost:3000
# Production: https://your-domain.com
# Must match the URL where your app is hosted
BETTER_AUTH_URL=http://localhost:3000

# ============================================
# Google OAuth Configuration
# ============================================
# Get from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID and add authorized redirect URIs:
# - http://localhost:3000/api/auth/callback/google (development)
# - https://your-domain.com/api/auth/callback/google (production)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================
# Supabase Configuration
# ============================================
# Get from: Supabase Dashboard > Settings > API
# These are required for user authentication and management
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# Service role key is required for server-side user management operations
# ⚠️ Keep this secret - never expose to client-side
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================
# Stripe Configuration
# ============================================
# Get from: Stripe Dashboard > Developers > API keys
# Test keys start with: sk_test_ and pk_test_
# Live keys start with: sk_live_ and pk_live_
# ⚠️ Use test keys for development, live keys only in production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Default price ID for trial subscriptions
# Get from: Stripe Dashboard > Products > Your Product > Pricing
# This is the price ID that will be used for new user trial subscriptions
STRIPE_DEFAULT_PRICE_ID=price_your_default_price_id

# Webhook secret for verifying Stripe webhooks
# Get from: Stripe Dashboard > Developers > Webhooks > Your endpoint > Signing secret
# Required for webhook signature verification
# Format: whsec_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# Resend Email Configuration
# ============================================
# Get from: Resend Dashboard > API Keys
# Used for sending transactional emails (magic links, notifications, etc.)
RESEND_API_KEY=re_your_resend_api_key

# Email address to send emails from
# Must be verified in Resend Dashboard > Domains
# If not set, defaults to "onboarding@resend.dev"
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# Redis Configuration (Upstash)
# ============================================
# Get from: Upstash Dashboard > Your Database > REST API
# Used for:
# - Distributed caching across instances
# - Session storage
# - Rate limiting
# - Temporary data storage
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_rest_token

# ============================================
# Application Configuration
# ============================================
# Public API URL
# Development: http://localhost:3000
# Production: https://your-domain.com
# This is used for API client configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# Node environment
# Options: development, test, production
# Automatically set by most deployment platforms
NODE_ENV=development

# ============================================
# Sentry Configuration (Optional)
# ============================================
# Get from: Sentry Dashboard > Settings > Projects > Your Project > Client Keys (DSN)
# Used for error tracking and performance monitoring
# If not set, Sentry will be disabled
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/your-project-id

# ============================================
# Google Search Console (Optional)
# ============================================
# Get from: Google Search Console > Settings > Ownership verification
# Used for site verification in metadata
GOOGLE_SITE_VERIFICATION=your_google_site_verification_code

